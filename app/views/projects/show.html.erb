<ul>
  <% @project.tasks.each do |task| %>
    <li>
      <%= check_box_tag "task_done_#{task.id}", "", task.done, data: {id: task.id}, class: 'task_done' %>
      <%= link_to task.title, task %>
    </li>
  <% end %>
</ul>
