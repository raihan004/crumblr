<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<blockquote><%= @project.description%></blockquote>
<p>
  <strong>Ends at:</strong>
  <%= @project.ends_at %>
</p>

<h2>Task for This Project</h2>
